// See https://go.microsoft.com/fwlink/?LinkId=733558
//  for the documentation about the tasks.json format
// See https://code.visualstudio.com/docs/editor/tasks-appendix
//  for additional Task settings
{
    "version": "2.0.0",
    "type": "shell",
    "options": {
        "cwd": "${fileDirname}"
    },
    "presentation": {
        "clear": true,
        "echo": true,
        "focus": false,
        "panel": "shared",
        "reveal": "silent"
    },
    "tasks": [
        {
            "label": "Trident Standalone MD to PDF",
            "command": "pandoc",
            "args": [
                "${file}",
                "--from=markdown",
                "--to=latex",
                "--output=${fileDirname}/output/${fileBasenameNoExtension}.pdf",
                "--standalone",
                "--biblatex",
                "--citeproc",
                "--filter=pandoc-xnos",
                "--csl=${workspaceRoot}/apa.csl",
                "--template=${workspaceRoot}/TridentAPA_template.tex"
            ],
            "group": "build"
        },
        {
            "label": "Trident MD to PDF",
            "command": "pandoc",
            "args": [
                "${file}",
                "--from=markdown",
                "--to=latex",
                "--output=${fileDirname}/output/${fileBasenameNoExtension}.pdf",
                "--standalone",
                "--biblatex",
                "--citeproc",
                "--filter=pandoc-xnos",
                "--csl=${workspaceRoot}/apa.csl",
                "--template=${workspaceRoot}/TridentAPA_template.tex"
            ],
            "group": "build",
            "dependsOn": [
                "Trident MD to TEX"
            ]
        },
        {
            "label": "Trident MD to TEX",
            "command": "pandoc",
            "args": [
                "${file}",
                "--from=markdown",
                "--to=latex",
                "--output=${fileDirname}/output/${fileBasenameNoExtension}.tex",
                "--standalone",
                "--log=${fileDirname}/pandoc-apa_tex.log.json",
                "--biblatex",
                "--citeproc",
                "--filter=pandoc-xnos",
                "--csl=${workspaceRoot}/apa.csl",
                "--template=${workspaceRoot}/TridentAPA_template.tex"
            ],
            "group": "build"
        },
        {
            "label": "eisvogel MD to PDF",
            "command": "pandoc",
            "args": [
                "${file}",
                "--from=markdown",
                "--to=latex",
                "--output=${fileDirname}/output/${fileBasenameNoExtension}.pdf",
                "--standalone",
                "--log=${fileDirname}/eisvogel_tex.log.json",
                "--biblatex",
                "--citeproc",
                "--filter=pandoc-xnos",
                "--csl=${workspaceRoot}/apa.csl",
                "--template=${workspaceRoot}/eisvogel.tex",
                "--listings"
            ],
            "group": "build"
        },
        {
            "label": "pandoc MD to PDF",
            "command": "pandoc",
            "args": [
                "${file}",
                "--from=markdown",
                "--to=latex",
                "--output=${fileDirname}/output/${fileBasenameNoExtension}.pdf",
                "--standalone",
                "--log=${fileDirname}/eisvogel_tex.log.json",
                "--biblatex",
                "--citeproc",
                "--filter=pandoc-xnos",
                "--csl=${workspaceRoot}/apa.csl",
                "--template=${workspaceRoot}/pandoc_default.tex",
                "--listings"
            ],
            "group": "build"
        },
    ],
    "problemMatcher": [
        {
            "fileLocation": [
                "relative",
                "${workspaceFolder}"
            ],
            "owner": "pandoc warn",
            "pattern": [
                {
                    "file": 2,
                    "kind": "file",
                    "regexp": "^(pandoc-apa:\\s)(.*)$"
                },
                {
                    "loop": true,
                    "message": 2,
                    "regexp": "^(\\[WARNING\\]\\s|Citeproc:\\s|(?=\\s{2,}))(.*)$"
                }
            ],
            "severity": "warning"
        }
    ]
}
